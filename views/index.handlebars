{{#if shortURL}}
  <div class="result">
    <h3>Success! Please use this link:</h3>
    <p id="generatedURL">{{origin}}/{{shortURL}}</p>
  </div>
  <button class="copy" onclick="copy()">Copy</button>
  <a href="/">home</a>

  <script>
    function copy() {
      const URL = document.getElementById("generatedURL")
      navigator.clipboard.writeText(URL.innerText)
    }
  </script>

{{else}}
  <form action="/" method="POST">
    <div class="container">
      <input type="url" name="url" placeholder="Please input URL here..." required />
      <button class="shorten" type="submit">Shorten</button>
    </div>
  </form>
{{/if}}